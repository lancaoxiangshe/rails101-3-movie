<div class="col-md-12">
  <div class="group">
    <%= link_to("New Movie", new_group_path, class: "btn btn-primary pull-right")%>
  </div>
  <table class="table table-hover" width="100%" style="height:50%">
    <col width="5%"><col width="10%"><col width="15%"><col width="45%"><col width="15%"><col width="10%">
    <thead>
      <tr>
        <th>#</th>
        <th width="200">Movie Pic</th>
        <th>Movie Name</th>
        <th>Description</th>
        <th>Creator</th>
      </tr>
    </thead>
    <tbody>
      <%= render :partial => "group_item", :collection => @groups, :as => :group %>
    </tbody>
  </table>
</div>
