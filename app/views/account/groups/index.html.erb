<div class="col-md-12">

  <h2 class="text-center"> My Joined Movie Groups </h2>

  <table class="table table-hover" width="100%">
    <col width="5%"><col width="10%"><col width="60%"><col width="10%"><col width="15%">
    <thead>
      <tr>
        <th> # </th>
        <th> Movie Name </th>
        <th> Description </th>
        <th> Review Count </th>
        <th> Last Update </th>
      </tr>
    </thead>

    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td> # </td>
          <td> <%= link_to(group.title, group_path(group)) %> </td>
          <td> <%= simple_format(group.description) %> </td>
          <td> <%= group.posts.count %> </td>
          <td> <%= group.updated_at %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
