<div class="col-md-12">

  <h2 class="text-center">My Reviews</h2>

  <br>

  <table class="table table-hover" width="100%">
    <col width="65%"><col width="15%"><col width="15%"><col width="5%">
    <thead>
      <tr>
        <th>Review</th>
        <th>Movie Name</th>
        <th>Last Update</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= simple_format(post.content) %></td>
          <td><%= post.group.title%></td>
          <td><%= post.updated_at %></td>
          <td><%= link_to("Edit", edit_group_post_path(post.group, post), class: "btn btn-default btn-xs") %></td>
          <td><%= link_to("Delete", group_post_path(post.group, post), method: :delete, data: { comfirm: "Are you sure?" }, class: "btn btn-default btn-xs") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
